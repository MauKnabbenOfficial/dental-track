<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Tipografia -->
    <Style TargetType="Label" x:Key="DT.Title">
        <Setter Property="TextColor" Value="{StaticResource DT.Primary}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="DT.Subtitle">
        <Setter Property="TextColor" Value="{StaticResource DT.Primary}" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Card -->
    <Style TargetType="Border" x:Key="DT.Card">
        <Setter Property="Stroke" Value="{StaticResource DT.Border}" />
        <Setter Property="Background" Value="{StaticResource DT.Primary}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="20"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="24" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#80000000" Opacity="0.25" Radius="12"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Entry -->
    <Style TargetType="Entry" x:Key="DT.Entry">
        <Setter Property="TextColor" Value="{StaticResource DT.Text}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource DT.TextMuted}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DT.Card}" />
        <!--<Setter Property="HeightRequest" Value="44" />-->
        <Setter Property="Margin" Value="0,6,0,0" />
        <Setter Property="Keyboard" Value="Default" />
        <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
    </Style>

    <!-- Botão primário -->
    <Style TargetType="Button" x:Key="DT.ButtonPrimary">
        <Setter Property="BackgroundColor" Value="{StaticResource DT.Accent}" />
        <Setter Property="TextColor" Value="{StaticResource DT.PrimaryDark}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="46" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <!-- Botão secundário (contorno) -->
    <Style TargetType="Button" x:Key="DT.ButtonSecondary">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource DT.Text}" />
        <Setter Property="BorderColor" Value="{StaticResource DT.Border}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="HeightRequest" Value="46" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <!-- Link -->
    <Style TargetType="Label" x:Key="DT.Link">
        <Setter Property="TextColor" Value="{StaticResource DT.Accent}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- CheckBox padrão DentalTrack -->
    <Style TargetType="CheckBox" x:Key="DT.CheckBox">
        <Setter Property="Color" Value="{StaticResource DT.Accent}" />
        <Setter Property="MaximumWidthRequest" Value="22" />
        <Setter Property="MinimumHeightRequest" Value="22" />
        <Setter Property="Margin" Value="0" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.9" />
                            <Setter Property="Opacity" Value="0.8" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="EstiloBotaoHoverPrimary" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DT.PrimaryDark}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#38D6C4" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#C038D6C4" />
                            <Setter Property="Scale" Value="0.99" />
                            <Setter Property="CornerRadius" Value="12" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="EstiloBotaoLogin" 
           TargetType="Button" 
           BasedOn="{StaticResource DT.ButtonPrimary}">

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#38D6C4" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#C038D6C4" />
                            <Setter Property="Scale" Value="0.99" />
                            <Setter Property="CornerRadius" Value="12" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="LabelMenu" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource DT.Text}" />
        <Setter Property="FontSize" Value="18" />
        
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="FontSize" Value="18" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="LightGray" />
                            <Setter Property="Scale" Value="0.99" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>

    </Style>

</ResourceDictionary>
