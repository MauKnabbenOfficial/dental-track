<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalTrack.Maui.Views.UsuarioRegisterPage"
             Title="UsuarioRegisterPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Style="{StaticResource DT.Entry}"
             Placeholder="voce@clinic.com"
             Keyboard="Email"
             Text="{Binding UsuarioCreate.Nome}" />
        <Button 
            Text="Click Me"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Command="{Binding CadastrarUsuarioCommand}"
            />
    </VerticalStackLayout>
</ContentPage>